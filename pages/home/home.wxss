/* 这是精选主题样式 */
.home-main-header{
  display: flex;
  color:#ab956d;
  height: 60rpx;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  font-size: 32rpx;
  margin: 20rpx 0;
}

/* 这是主题盒子样式 */
.home-main-box{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between
}
.theme-item{
  display: flex;
  width: 50%;
  height: 375rpx;
  border-bottom: 4rpx solid #fff;
  box-sizing:border-box;
}
.theme-item:first-child{
border-right: 4rpx solid #fff;
}
.theme-item:last-child{
  width: 100%;
}

